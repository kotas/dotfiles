# user.name and user.email should be set in ~/.gitconfig.local

[include]
  path = ~/.gitconfig.local
[credential]
  helper = osxkeychain
[core]
  editor = vim
  excludesfile = ~/.gitignore_global
	pager = git-split-diffs --color | less -RFX
[color]
  ui = auto
[pull]
  rebase = true
[alias]
  s = status
  st = status
  c = commit
  ci = commit
  co = checkout
  b = branch
  d = diff
  df = diff
  ds = diff --staged
  pr = pull --rebase
  prr = pull --rebase --prune
  r = rebase
  rc = rebase --continue
  ra = rebase --abort
